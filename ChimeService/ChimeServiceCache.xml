    <eviction wakeUpInterval="30000">
        <default algorithmClass="org.jboss.cache.eviction.LRUAlgorithm" eventQueueSize="200000">
            <property name="maxNodes" value="100000"/>
            <property name="timeToLive" value="1000000"/>
        </default>
        <region name="/SocialContext" algorithmClass="org.jboss.cache.eviction.LRUAlgorithm" eventQueueSize="200000">
            <property name="maxNodes" value="1000"/>
            <property name="timeToLive" value="600000"/>
        </region>
        <region name="/TagList" algorithmClass="org.jboss.cache.eviction.LRUAlgorithm" eventQueueSize="200000">
            <property name="maxNodes" value="25000"/>
            <property name="timeToLive" value="600000"/>
        </region>
        <region name="/Shape" algorithmClass="org.jboss.cache.eviction.LRUAlgorithm" eventQueueSize="200000">
            <property name="maxNodes" value="10000"/>
            <property name="timeToLive" value="-1"/>
        </region>
        <region name="/UserSession" algorithmClass="org.jboss.cache.eviction.LRUAlgorithm" eventQueueSize="200000">
            <property name="maxNodes" value="100000"/>
            <property name="timeToLive" value="3600000"/>
        </region>
        <region name="/ExpiringUserSession" algorithmClass="org.jboss.cache.eviction.LRUAlgorithm" eventQueueSize="200000">
            <property name="maxNodes" value="100000"/>
            <property name="timeToLive" value="800000"/>
        </region>
        <region name="/Template" algorithmClass="org.jboss.cache.eviction.LRUAlgorithm" eventQueueSize="200000">
            <property name="maxNodes" value="1000"/>
            <property name="timeToLive" value="-1"/>
        </region>
    </eviction>
</jbosscache>
