<templates>
    <specifications>
        <!-- the detail template for a User -->
        <specification name="userDetail">
            <column width="1.0">
                <portlet type="InstanceHeader" headerType="shaded" showHeader="false" />
                <portlet type="UserMessages" showHeader="true" />
<!--
                <portlet type="UserDetail" title="User Details" />
-->
                <portlet type="InstanceField" title="User">
                </portlet>

                <portlet type="InstanceSocialActivity" />
            </column>
            <column width="300">
                <portlet type="ImageGallery" showHeader="true" />
                <portlet type="FileGallery" showHeader="true" />
                <portlet type="InstanceReferrers" showHeader="true" />
            </column>
        </specification>

        <!-- the detail template for shapes that can't contain fields -->
        <specification name="shapeless">
            <column width="1.0">
                <portlet type="InstanceHeader" headerType="shaded" />
                <portlet type="InstanceSocialActivity" />
            </column>
        </specification>
    </specifications>

    <mappings>
        <!-- shape mappings -->
        <mapping shape="800" specification="userDetail"/>

        <!-- instance mappings -->
        <mapping instance="100" specification="shapeless"/>
        <mapping instance="200" specification="shapeless"/>
        <mapping instance="300" specification="shapeless"/>
        <mapping instance="400" specification="shapeless"/>
        <mapping instance="500" specification="shapeless"/>
        <mapping instance="600" specification="shapeless"/>
        <mapping instance="700" specification="shapeless"/>
        <mapping instance="1000" specification="shapeless"/>
        <mapping instance="1100" specification="shapeless"/>
        <mapping instance="1600" specification="shapeless"/>
        <mapping instance="2000" specification="shapeless"/>
        <mapping instance="2200" specification="shapeless"/>
        <mapping instance="2300" specification="shapeless"/>
    </mappings>
</templates>
